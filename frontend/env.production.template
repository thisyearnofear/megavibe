# Fee Configuration - Using your working values
VITE_FEE_RECIPIENT_ADDRESS=0x8502d079f93AEcdaC7B0Fe71Fa877721995f1901
VITE_PLATFORM_FEE_PERCENTAGE=5

# Production Features
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=error

# Analytics (Optional - Add your analytics keys)
VITE_MIXPANEL_TOKEN=your_mixpanel_token_here
VITE_POSTHOG_KEY=your_posthog_key_here

# Monitoring (Optional - Add your monitoring keys)
VITE_SENTRY_DSN=your_sentry_dsn_here

# IPFS Configuration (For bounty content storage)
VITE_IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs/
VITE_PINATA_API_KEY=your_pinata_api_key
VITE_PINATA_SECRET_KEY=your_pinata_secret_key

# Social Sharing
VITE_APP_URL=https://megavibe.xyz
VITE_APP_NAME=MegaVibe
VITE_APP_DESCRIPTION=Turn Live Moments Into Value - Tip speakers and create content bounties

# Performance Optimization
VITE_CDN_URL=https://cdn.megavibe.xyz
VITE_ENABLE_PWA=true

# Feature Flags
VITE_ENABLE_BOUNTIES=true
VITE_ENABLE_GPS_DETECTION=true
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_ENABLE_ADVANCED_ANALYTICS=true
