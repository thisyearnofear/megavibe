# MegaVibe Frontend Production Environment Configuration
# Copy this file to .env.production and update with your actual values

# Environment
VITE_ENVIRONMENT=production

# API Configuration
VITE_API_URL=https://api.megavibe.xyz
VITE_WS_URL=https://api.megavibe.xyz

# Dynamic.xyz Configuration (Wallet Connection) - Use your existing working ID
VITE_DYNAMIC_ENVIRONMENT_ID=cd08ffe6-e5d5-49d4-8cb3-f9419a7f5e4d

# Mantle Mainnet Configuration
VITE_MANTLE_RPC_URL=https://rpc.mantle.xyz
VITE_MANTLE_CHAIN_ID=5000
VITE_MANTLE_NETWORK_NAME=Mantle

# Smart Contract Addresses (Will be updated after mainnet deployment)
# Currently using Sepolia addresses - REPLACE AFTER MAINNET DEPLOYMENT
VITE_TIPPING_CONTRACT_ADDRESS=0xa226c82f1b6983aBb7287Cd4d83C2aEC802A183F
VITE_BOUNTY_CONTRACT_ADDRESS=0xf6D9428094bD1EF3427c8f0bBce6A4068B900b5F
