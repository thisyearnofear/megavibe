# Production Environment Variables Template
# Copy this file to .env.production and update with your actual values
# IMPORTANT: NEVER commit your actual .env.production file to Git

# API Configuration
VITE_API_URL=https://your-api-domain.com
VITE_WS_URL=https://your-api-domain.com
VITE_ENVIRONMENT=production

# Dynamic.xyz Configuration
VITE_DYNAMIC_ENVIRONMENT_ID=your_production_dynamic_id

# Mantle Network Configuration
VITE_MANTLE_RPC_URL=https://rpc.sepolia.mantle.xyz
VITE_MANTLE_CHAIN_ID=5003
VITE_MANTLE_NETWORK_NAME=Mantle Sepolia

# Smart Contract Configuration
VITE_TIPPING_CONTRACT_ADDRESS=your_production_tipping_contract
VITE_BOUNTY_CONTRACT_ADDRESS=your_production_bounty_contract
VITE_FEE_RECIPIENT_ADDRESS=your_production_fee_recipient
VITE_PLATFORM_FEE_PERCENTAGE=5

# USDC Contract Addresses by Chain
VITE_USDC_MANTLE_SEPOLIA=your_usdc_mantle_sepolia_address
VITE_USDC_BASE_SEPOLIA=your_usdc_base_sepolia_address
VITE_USDC_LINEA_SEPOLIA=your_usdc_linea_sepolia_address
VITE_USDC_OP_SEPOLIA=your_usdc_op_sepolia_address
VITE_USDC_ARB_SEPOLIA=your_usdc_arb_sepolia_address
VITE_USDC_ZKSYNC_SEPOLIA=your_usdc_zksync_sepolia_address

# Cross-Chain Integration
VITE_LIFI_API_KEY=your_lifi_api_key

# FilCDN Configuration (for decentralized storage)
VITE_FILECOIN_PRIVATE_KEY=your_filecoin_private_key_here
VITE_FILECOIN_RPC_URL=https://api.calibration.node.glif.io/rpc/v1
VITE_FILCDN_ENABLED=true

# Web3 Social Configuration
VITE_NEYNAR_API_KEY=your_production_neynar_key
VITE_NEYNAR_CLIENT_ID=your_production_neynar_client_id
VITE_LENS_API_URL=https://api.lens.dev

# Production Features
VITE_DEBUG_MODE=false
