# MegaVibe Environment Configuration
# Copy this file to .env.local and fill in your values

# ===========================================
# CONTRACT ADDRESSES (Sepolia Testnet)
# ===========================================
# These will be auto-populated after contract deployment
NEXT_PUBLIC_CONTRACT_TIPPING_ADDRESS=
NEXT_PUBLIC_CONTRACT_BOUNTIES_ADDRESS=
NEXT_PUBLIC_CONTRACT_REPUTATION_ADDRESS=

# ===========================================
# NETWORK CONFIGURATION
# ===========================================
# Default network (11155111 = Sepolia, 8453 = Base Mainnet)
NEXT_PUBLIC_DEFAULT_CHAIN_ID=11155111
NEXT_PUBLIC_NETWORK_NAME=sepolia

# ===========================================
# RPC PROVIDERS (Add your API keys)
# ===========================================
# Alchemy (Recommended)
NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_api_key_here

# Infura (Alternative)
NEXT_PUBLIC_INFURA_API_KEY=your_infura_api_key_here

# ===========================================
# BLOCK EXPLORERS
# ===========================================
# Etherscan API for transaction verification
NEXT_PUBLIC_ETHERSCAN_API_KEY=your_etherscan_api_key_here

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=MegaVibe
NEXT_PUBLIC_APP_DESCRIPTION="The Stage for Live Performance Economy"

# ===========================================
# PRODUCTION CONTRACT ADDRESSES (Base Mainnet)
# ===========================================
# Uncomment and fill these for production deployment
# NEXT_PUBLIC_BASE_CONTRACT_TIPPING_ADDRESS=
# NEXT_PUBLIC_BASE_CONTRACT_BOUNTIES_ADDRESS=
# NEXT_PUBLIC_BASE_CONTRACT_REPUTATION_ADDRESS=

# ===========================================
# DEVELOPMENT FLAGS
# ===========================================
# Set to 'true' for development mode
NEXT_PUBLIC_DEV_MODE=true

# Enable debug logging
NEXT_PUBLIC_DEBUG=false

# ===========================================
# WALLET CONFIGURATION
# ===========================================
# WalletConnect Project ID (for WalletConnect integration)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# ===========================================
# ANALYTICS & MONITORING
# ===========================================
# Add your analytics keys here
# NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
# NEXT_PUBLIC_MIXPANEL_TOKEN=

# ===========================================
# IPFS & DECENTRALIZED STORAGE
# ===========================================
# For future decentralized features
# NEXT_PUBLIC_IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs/
# NEXT_PUBLIC_PINATA_API_KEY=
# NEXT_PUBLIC_PINATA_SECRET_KEY=