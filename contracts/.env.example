# Contract Deployment Environment Variables - EXAMPLE FILE
# Create a copy of this file named .env and fill in your values

# Network Configuration
NETWORK=mantleTestnet  # Options: mantleTestnet, mantleMainnet, hardhat, localhost

# Deployment Account
PRIVATE_KEY=your_private_key_here  # Never commit your actual private key!

# Verification 
MANTLE_API_KEY=your_mantle_api_key_here  # For contract verification on block explorer
ETHERSCAN_API_KEY=your_etherscan_api_key_here  # For contract verification

# Gas Reporter Settings
REPORT_GAS=true
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here  # For gas cost in USD

# RPC URLs
MANTLE_TESTNET_URL=https://rpc.sepolia.mantle.xyz
MANTLE_MAINNET_URL=https://rpc.mantle.xyz
LOCALHOST_URL=http://127.0.0.1:8545

# Contract Addresses (for scripts and testing)
TIPPING_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
BOUNTY_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
REPUTATION_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# Contract Owner Address (for ownership transfer)
OWNER_ADDRESS=0x0000000000000000000000000000000000000000