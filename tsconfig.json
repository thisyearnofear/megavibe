{
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "types": ["@stripe/stripe-js", "node"],
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx"
  },

  "files": [],
  "include": [
    "./frontend/src",
    "vite.config.ts",
    "./backend/**/*",
    "*.cjs",
    "./frontend/src/types"
  ],
  "references": [{ "path": "./frontend/tsconfig.frontend.json" }]
}
